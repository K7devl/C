#include <stdio.h>
#include <string.h>

/*6. Hacer una función recursiva que imprima el contenido de un arreglo de caracteres
de atrás para adelante. Probar la función en un programa. */

char ordenar(char *letras, int i, char aux1, char aux2, int z, int cant){
    if (z == 5 || i == 4){
        return 0;
    }
    else{
        aux1=letras[z];
        aux2=letras[i];
        letras[i] = aux1;
        letras[z] = aux2;
        return ordenar(letras, i-1, aux1, aux2, z+1, cant);
    }
}

int main(){
    char letras[10];
    char aux1, aux2;
    int i,z, cant, jiji;
    cant = 5;
    jiji = 97;
    z=0;
    for(i=0;i<10;i++){
        letras[i] = jiji+i;
    }
    ordenar(letras, i, aux1, aux2, 0, cant);
    for(i=0;i<10;i++){
        printf("%d - %c\n", i, letras[i]);
    }
}
