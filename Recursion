int main(){

    int h,o,l,a,_,m,u,n,d, o1;
    h=55;
    o=55;
    l=55;
    a=55;
    _=55;
    m=55;
    u=55;
    n=55;
    d=55;
    o1=55;

    printf("%c\n", recurH(h));
    printf("h%c\n", recurO(o));
    printf("ho%c\n", recurL(l));
    printf("hol%c\n", recurA(a));
    printf("hola%c\n", recur_(_));
    printf("hola_%c\n", recurM(m));
    printf("hola_m%c\n", recurU(u));
    printf("hola_mu%c\n", recurN(n));
    printf("hola_mun%c\n", recurD(d));
    printf("hola_mund%c\n", recurO1(o1));

}
